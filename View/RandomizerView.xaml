<Window x:Class="SQLRandomizer.View.RandomizerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLRandomizer.View"
        mc:Ignorable="d"
        Title="RandomizerView" Height="450" Width="800">
    <StackPanel>
        <TextBox Height="200" TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding Query, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
        <Label Content="Count" />
        <TextBox Text="{Binding Count, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="Count_PreviewTextInput" />

        <Label Content="Percentage of null" />
        <TextBox Text="{Binding NullPercentage, UpdateSourceTrigger=PropertyChanged}" />

        <Button Content="Randomize" Command="{Binding GetRandom}" />
        <ScrollViewer>
            <TextBox Height="200" TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding Inserts, UpdateSourceTrigger=PropertyChanged}" />
        </ScrollViewer>
    </StackPanel>
</Window>
